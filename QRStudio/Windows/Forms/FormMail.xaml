<local:FormBase x:Class="QRStudio.Forms.FormMail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QRStudio.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <UniformGrid Columns="2" Margin="0,0,0,10">
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20,0" Text="이메일 주소"/>
                <TextBox Tag="MATMSG:TO"/>
            </UniformGrid>
            <UniformGrid Columns="2" Margin="0,0,0,10">
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20,0" Text="이메일 제목"/>
                <TextBox Tag="SUB"/>
            </UniformGrid>
            <UniformGrid Columns="2">
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20,0" Text="이메일 내용"/>
                <TextBox Tag="BODY" Height="78" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</local:FormBase>
